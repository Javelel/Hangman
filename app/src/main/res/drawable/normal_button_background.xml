<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Stan przycisku, gdy jest wciśnięty -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#c8c8c8" /> <!-- Kolor tła przycisku - biały -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Kolor ramki przycisku - czarny -->
            <corners android:radius="40dp" /> <!-- Zaokrąglenie rogów przycisku -->
        </shape>
    </item>

    <!-- Stan domyślny przycisku -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FFFFFF" /> <!-- Kolor tła przycisku - biały -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Kolor ramki przycisku - czarny -->
            <corners android:radius="40dp" /> <!-- Zaokrąglenie rogów przycisku -->
        </shape>
    </item>

</selector>
